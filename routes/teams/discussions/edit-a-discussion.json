{
  "name": "Edit a discussion",
  "enabledForApps": true,
  "method": "PATCH",
  "path": "/teams/:team_id/discussions/:discussion_number",
  "params": [
    {
      "name": "team_id",
      "type": "string",
      "required": true,
      "description": ""
    },
    {
      "name": "discussion_number",
      "type": "integer",
      "required": true,
      "description": ""
    },
    {
      "name": "title",
      "type": "string",
      "description": "The discussion post's title.",
      "required": false
    },
    {
      "name": "body",
      "type": "string",
      "description": "The discussion post's body text.",
      "required": false
    }
  ],
  "description": "Edits the title and body text of a discussion post. Only the parameters you provide are updated. OAuth access tokens require the `write:discussion` [scope](https://developer.github.com/apps/building-oauth-apps/scopes-for-oauth-apps/).",
  "documentationUrl": "https://developer.github.com/v3/teams/discussions/#edit-a-discussion"
}
