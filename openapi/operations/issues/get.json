      "required": true,
      "description": "Username or organization name"
    },
    {
      "name": "repo",
      "in": "path",
      "schema": {
        "type": "string"
      },
      "required": true,
      "description": "Repository name"
    },
    {
      "name": "number",
      "in": "path",
