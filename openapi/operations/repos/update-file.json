{
  "summary": "Update a file",
  "description": "Updates a file in a repository.",
  "operationId": "repos-update-file",
  "tags": [
    "repos"
  ],
  "externalDocs": {
    "description": "API method documentation",
    "url": "https://developer.github.com/v3/repos/contents/#update-a-file"
  },
  "parameters": [
    {
      "name": "owner",
      "in": "path",
      "schema": {
        "type": "string"
      },
      "required": true,
      "description": "owner parameter"
    },
    {
      "name": "repo",
      "in": "path",
      "schema": {
        "type": "string"
      },
      "required": true,
      "description": "repo parameter"
    },
    {
      "name": "path",
      "in": "path",
      "schema": {
        "type": "string"
      },
      "required": true,
      "description": "path parameter"
    }
  ],
  "requestBody": {
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "description": "The commit message."
            },
            "content": {
              "description": "The new file content, using Base64 encoding."
            },
            "sha": {
              "description": "The blob SHA of the file being replaced."
            },
            "branch": {
              "description": "The branch name."
            },
            "committer": {
              "description": "The person that committed the file."
            },
            "committer.name": {
              "description": "The name of the author or committer of the commit. You'll receive a `422` status code if you omit `name`."
            },
            "committer.email": {
              "description": "The email of the author or committer of the commit. You'll receive a `422` status code if you omit `name`."
            },
            "author": {
              "description": "The author of the file."
            },
            "author.name": {
              "description": "The name of the author or committer of the commit. You'll receive a `422` status code if you omit `name`."
            },
            "author.email": {
              "description": "The email of the author or committer of the commit. You'll receive a `422` status code if you omit `name`."
            }
          },
          "required": [
            "message",
            "content",
            "sha",
            "committer.name",
            "committer.email",
            "author.name",
            "author.email"
          ]
        }
      }
    }
  },
  "x-code-samples": [
    {
      "lang": "Shell",
      "source": "curl \\\n  -XPUT \\\n  -H\"Accept: application/vnd.github.v3+json\" \\\n  https://developer.github.com/repos/octocat/:repo/contents/:path \\\n  -d '{\"message\":\"message\",\"content\":\"content\",\"sha\":\"sha\",\"committer.name\":\"committer.name\",\"committer.email\":\"committer.email\",\"author.name\":\"author.name\",\"author.email\":\"author.email\"}'"
    },
    {
      "lang": "JS",
      "source": "octokit.repos.get({\n  owner: 'octocat',\n  repo: 'hello-world',\n  path: 'path',\n  message: 'message',\n  content: 'content',\n  sha: 'sha',\n  'committer.name': 'committer.name',\n  'committer.email': 'committer.email',\n  'author.name': 'author.name',\n  'author.email': 'author.email'\n})"
    }
  ],
  "responses": {
    "200": {
      "description": "response",
      "content": {
        "application/json": {
          "schema": {
            "properties": {
              "content": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "path": {
                    "type": "string"
                  },
                  "sha": {
                    "type": "string"
                  },
                  "size": {
                    "type": "number"
                  },
                  "url": {
                    "type": "string"
                  },
                  "html_url": {
                    "type": "string"
                  },
                  "git_url": {
                    "type": "string"
                  },
                  "download_url": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "_links": {
                    "type": "object",
                    "properties": {
                      "self": {
                        "type": "string"
                      },
                      "git": {
                        "type": "string"
                      },
                      "html": {
                        "type": "string"
                      }
                    }
                  }
                }
              },
              "commit": {
                "type": "object",
                "properties": {
                  "sha": {
                    "type": "string"
                  },
                  "node_id": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string"
                  },
                  "html_url": {
                    "type": "string"
                  },
                  "author": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  },
                  "committer": {
                    "type": "object",
                    "properties": {
                      "date": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  },
                  "message": {
                    "type": "string"
                  },
                  "tree": {
                    "type": "object",
                    "properties": {
                      "url": {
                        "type": "string"
                      },
                      "sha": {
                        "type": "string"
                      }
                    }
                  },
                  "parents": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string"
                        },
                        "html_url": {
                          "type": "string"
                        },
                        "sha": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "verification": {
                    "type": "object",
                    "properties": {
                      "verified": {
                        "type": "boolean"
                      },
                      "reason": {
                        "type": "string"
                      },
                      "signature": {
                        "type": "string"
                      },
                      "payload": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
