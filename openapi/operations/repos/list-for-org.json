      "name": "org",
      "in": "path",
      "schema": {
        "type": "string"
      },
      "required": true,
      "description": "org parameter"
    },
    {
      "name": "type",
      "in": "query",
      "schema": {
        "type": "string"
      },
      "required": false,
      "description": "Can be one of `all`, `public`, `private`, `forks`, `sources`, `member`."
