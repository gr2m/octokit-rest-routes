                "email": { "type": "string" },
                "verified": { "type": "boolean" },
                "primary": { "type": "boolean" },
                "visibility": { "type": "string" }
              }
            }
          },
          "example": [
            {
              "email": "octocat@github.com",
              "verified": true,
              "primary": true,
